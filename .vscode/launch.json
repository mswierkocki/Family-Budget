    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "test"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Dev Django ",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "127.0.0.1:8088"
            ],
            "env": {
                "DEBUG": "True",
                "APP_ENV": "DEV"
            },
            "envFile": "${workspaceFolder}/.env",
            "django": true,
            "justMyCode": false
        }
    ]
}